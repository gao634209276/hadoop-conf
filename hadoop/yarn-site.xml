<?xml version="1.0"?>
<configuration>

<!-- Site specific YARN configuration properties -->
<!-- Resourcemanager HA -->
	<property>
		<name>yarn.resourcemanager.hostname</name>
		<value>ark</value>
	</property>
	<property>
		<name>yarn.resourcemanager.address</name>
		<value>ark:8032</value>
	</property>
	<property>
		<name>yarn.resourcemanager.scheduler.address</name>
		<value>ark:8030</value>
	</property>
	<property>
		<name>yarn.resourcemanager.webapp.https.address</name>
		<value>ark:23189</value>
	</property>
	<property>
		<name>yarn.resourcemanager.webapp.address</name>
		<value>ark:8088</value>
	</property>
	<property>
		<name>yarn.resourcemanager.resource-tracker.address</name>
		<value>ark:8031</value>
	</property>
	<property>
		<name>yarn.resourcemanager.admin.address</name>
		<value>ark:8033</value>
	</property>
	<property>
		<name>yarn.nodemanager.aux-services</name>
		<value>mapreduce_shuffle,spark_shuffle</value>
	</property>
	<property>
		<name>yarn.nodemanager.aux-services.mapreduce_shuffle.class</name>
		<value>org.apache.hadoop.mapred.ShuffleHandler</value>
	</property>
	<property>
		<name>yarn.nodemanager.aux-services.spark_shuffle.class</name>
		<value>org.apache.spark.network.yarn.YarnShuffleService</value>
	</property>

	<property>
		<name>yarn.nodemanager.local-dirs</name>
		<value>/app/data/sinova/yarn/nodemanager</value>
	</property>
	<property>
		<name>yarn.nodemanager.log-dirs</name>
		<value>/app/data/sinova/yarn/nodemanager-logs</value>
	</property>   
	<property>
		<name>yarn.log-aggregation-enable</name>
		<value>true</value>
	</property>
	<property>
		<name>yarn.nodemanager.remote-app-log-dir</name>
		<value>/app/data/sinova/yarn/remote-app-log</value>
	</property>
	<property>
		<name>yarn.application.classpath</name>
		<value>
			/opt/sinova/hadoop-2.5.2/etc/hadoop,
			/opt/sinova/hadoop-2.5.2/share/hadoop/common/*,
			/opt/sinova/hadoop-2.5.2/share/hadoop/common/lib/*,
			/opt/sinova/hadoop-2.5.2/share/hadoop/hdfs/*,
			/opt/sinova/hadoop-2.5.2/share/hadoop/hdfs/lib/*,
			/opt/sinova/hadoop-2.5.2/share/hadoop/mapreduce/*,
			/opt/sinova/hadoop-2.5.2/share/hadoop/mapreduce/lib/*,
			/opt/sinova/hadoop-2.5.2/share/hadoop/yarn/*,
			/opt/sinova/hadoop-2.5.2/share/hadoop/yarn/lib/*,
		</value>
	</property>
	<!--  sets the maximum memory YARN can utilize on the node -->
	<property>
		<name>yarn.nodemanager.resource.memory-mb</name>
		<value>8000</value>
	</property>
	<!-- want to allow for a maximum of 20 Containers, and thus need (24 GB total RAM) / (12 # of Containers) = 2 GB minimum per container-->
	<property>
		<name>yarn.scheduler.minimum-allocation-mb</name>
		<value>512</value>
		<discription>单个任务可申请最少内存，默认1024MB</discription>
	</property>
	<property>
		<name>yarn.scheduler.maximum-allocation-mb</name>
		<value>4096</value>
		<discription>单个任务可申请最大内存，默认8192MB</discription>
	</property>
	<property>
		<name>yarn.nodemanager.vmem-pmem-ratio</name>
		<value>2.1</value>
	</property>
	<property>
		<name>yarn.nodemanager.resource.cpu-vcores</name>
		<value>3</value>
	</property>
	<property>
		<name>yarn.am.liveness-monitor.expiry-interval-ms</name>
		<value>60000</value>
	</property>
	<property>
		<name>yarn.resourcemanager.container.liveness-monitor.interval-ms</name>
		<value>60000</value>
	</property>
<!--yarn tez timeline conf set-->
        <property>
                <name>yarn.timeline-service.enabled</name>
                <value>true</value>
        </property>
        <property>
                <name>yarn.timeline-service.hostname</name>
                <value>localhost</value>
        </property>
        <property>
                <name>yarn.timeline-service.http-cross-origin.enabled</name>
                <value>true</value>
        </property>
        <property>
                <name>yarn.resourcemanager.system-metrics-publisher.enabled</name>
                <value>true</value>
        </property>
        <property>
                <name>yarn.timeline-service.webapp.address</name>
                <value>${yarn.timeline-service.hostname}:8188</value>
        </property>
        <property>
                <name>yarn.timeline-service.webapp.https.address</name>
                <value>${yarn.timeline-service.hostname}:2191</value>
        </property>

</configuration>
